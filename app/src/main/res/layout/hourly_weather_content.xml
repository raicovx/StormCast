<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:paddingBottom="@dimen/activity_vertical_margin"
                android:paddingLeft="@dimen/activity_horizontal_margin"
                android:paddingRight="@dimen/activity_horizontal_margin"
                android:paddingTop="@dimen/activity_vertical_margin"
                android:layout_marginTop="?android:actionBarSize"
                android:theme="@style/General"
                android:id="@+id/hourly_weather_activity"
                tools:context="com.jamesc.stormcast.HourlyWeather"
                tools:showIn="@layout/hourly_weather_activity_layout">
<ListView android:id="@+id/hourly_weather_list_items"
                android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:dividerHeight="5dp"
              android:divider="@color/background_color"/>

    <ProgressBar
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/hourly_activity_progress_bar"
        android:indeterminate="true"
        android:indeterminateDrawable="@drawable/progress_drawable"
        android:layout_centerInParent="true"
        android:background="#00000000"
        style="?android:attr/progressBarStyleLarge"
        />




</RelativeLayout>