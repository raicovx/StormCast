<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:theme="@style/General"
    android:id="@+id/currentWeatherLayout"
    tools:context="com.jamesc.stormy.MainActivity"
    tools:showIn="@layout/activity_main">

    <android.support.v7.widget.CardView
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:id="@+id/temperature_card_view"
        android:layout_width="match_parent"
        android:layout_marginLeft="@dimen/card_margin_sides"
        android:layout_marginRight="@dimen/card_margin_sides"
        android:layout_marginTop="?android:attr/actionBarSize"
        android:layout_height="wrap_content"
        android:minHeight="275dp"
        card_view:cardCornerRadius="4dp">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:background="#00000000"
            android:id="@+id/temperatureTextView"
            android:textSize="125sp"
            android:fontFamily="sans-serif-light"
            android:textColor="@color/secondary_text_color"
            android:gravity="center"
            android:text="27.1"
            android:layout_centerHorizontal="true"
            android:paddingTop="24dp" />
        <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:id="@+id/timeTextView"
            android:textAlignment="center"
            android:textColor="@color/secondary_text_color"
            android:layout_below="@+id/temperatureTextView"
            android:layout_marginTop="175dp"
            android:textSize="18sp"
            android:background="#00000000" />
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/degreesImageView"
            android:background="#00000000"
            android:layout_gravity="right"
            android:layout_marginRight="36dp"
            android:layout_marginTop="25dp"
            android:layout_alignTop="@+id/temperatureTextView"
            android:layout_toRightOf="@+id/temperatureTextView"
            android:layout_toEndOf="@+id/temperatureTextView"
            android:src="@mipmap/degree"
            android:tint="#FF000000" />

        <TextView
        android:id="@+id/locationTextView"
        android:background="#00000000"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_gravity="bottom"
        android:textColor="@color/secondary_text_color"
        android:fontFamily="sans-serif-thin"
        android:textSize="32sp"
        android:text="Sydney, Australia"
        android:textAlignment="center"
        android:layout_marginTop="15dp"
        android:layout_marginBottom="15dp"
            />

</android.support.v7.widget.CardView>
    <android.support.v7.widget.CardView
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:id="@+id/summary_card_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/card_margin_sides"
        android:layout_marginRight="@dimen/card_margin_sides"
        android:minHeight="150dp"
        card_view:cardBackgroundColor="#40568b"
        card_view:cardCornerRadius="4dp"
        android:layout_marginTop="15dp"
        android:layout_below="@id/temperature_card_view"
        android:layout_centerHorizontal="true">
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/iconImageView"
            android:minHeight="100dp"
            android:minWidth="100dp"
            android:layout_marginTop="24dp"
            android:layout_marginLeft="15dp"
            android:layout_above="@+id/temperatureTextView"
            android:layout_alignLeft="@+id/temperatureTextView"
            android:layout_alignStart="@+id/temperatureTextView"
            android:background="#00000000" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:id="@+id/summaryTextView"
            android:textAlignment="center"
            android:gravity="center"
            android:textSize="30sp"
            android:layout_marginTop="24dp"
            android:layout_marginLeft="128dp"
            android:layout_toRightOf="@+id/iconImageView"
            android:layout_alignRight="@+id/degreesImageView"
            android:layout_alignEnd="@+id/degreesImageView"
            android:minHeight="100dp"
            android:textColor="@color/primary_text_color"
            android:background="#00000000" />
        </android.support.v7.widget.CardView>

    <ProgressBar
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/refreshProgress"
        android:indeterminate="true"
        android:indeterminateDrawable="@drawable/progress_drawable"
        android:layout_below="@+id/degreesImageView"
        android:layout_centerInParent="true"
        style="?android:attr/progressBarStyleLarge"
        />


    <android.support.v7.widget.CardView
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:id="@+id/auto_sync_off_warning_card"
        android:layout_width="match_parent"
        android:layout_marginLeft="@dimen/card_margin_sides"
        android:layout_marginRight="@dimen/card_margin_sides"
        android:layout_marginTop="?android:attr/actionBarSize"
        android:layout_height="wrap_content"
        android:minHeight="100dp"
        card_view:cardBackgroundColor="#FFFFFF"
        card_view:cardCornerRadius="4dp"
        >
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="15dp"
        android:background="#00000000"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Auto Syncing is Disabled. Refresh using the button below"
        android:id="@+id/auto_sync_off_warning_textview"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        android:textColor="@color/secondary_text_color"
        android:textIsSelectable="false"
        android:visibility="gone"
        />
            </android.support.v7.widget.CardView>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:layout_below="@+id/summary_card_view"
        android:layout_marginTop="15dp">
    <android.support.v7.widget.CardView
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:id="@+id/humidity_card"
        android:layout_width="fill_parent"
        android:layout_marginLeft="@dimen/card_margin_sides"
        android:layout_marginRight="@dimen/card_margin_sides"
        android:layout_toLeftOf="@+id/windspeed_card"
        android:layout_height="wrap_content"
        android:minHeight="100dp"
        card_view:cardBackgroundColor="#FFFFFF"
        card_view:cardCornerRadius="4dp"
        android:layout_weight="1"
        >
        <ImageView android:id="@+id/humidity_icon"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_centerVertical="true"
            tools:centerVerticalInParent="true"
            android:layout_marginLeft="24dp"
            android:background="#00000000"/>
        <TextView android:id="@+id/humidity_tv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="15dp"
            android:background="#00000000"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true"
            android:textSize="24sp"
            android:textColor="@color/secondary_text_color"
                  android:textAlignment="center"/>

        </android.support.v7.widget.CardView>
        <android.support.v7.widget.CardView
            xmlns:card_view="http://schemas.android.com/apk/res-auto"
            android:id="@+id/windspeed_card"
            android:layout_width="fill_parent"
            android:layout_marginLeft="@dimen/card_margin_sides"
            android:layout_marginRight="@dimen/card_margin_sides"
            android:layout_toRightOf="@+id/humidity_card"
            android:layout_height="wrap_content"
            android:minHeight="100dp"
            card_view:cardBackgroundColor="#FFFFFF"
            card_view:cardCornerRadius="4dp"
            android:layout_weight="1"
            >
            <TextView android:id="@+id/windspeed_tv"
                      android:layout_width="match_parent"
                      android:layout_height="wrap_content"
                      android:layout_gravity="center"
                      android:background="#00000000"
                      android:layout_centerVertical="true"
                      android:layout_centerHorizontal="true"
                      android:textSize="24sp"
                      android:textColor="@color/secondary_text_color"
                      android:textAlignment="center"/>
            </android.support.v7.widget.CardView>
    </LinearLayout>
</RelativeLayout>